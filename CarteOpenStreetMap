library(raster) 
library(terra)
library(sp)
library(OpenStreetMap)
library(maps)
library(ggplot2)

mp <- openmap(c(51.50382, 2.40787),c(49.49722, 6.40787),zoom=NULL,"osm",mergeTiles = TRUE)
mpConvert <- openproj(mp)
mpConvertFinal <- OpenStreetMap::autoplot.OpenStreetMap(mpConvert) +
                  geom_point(aes(x=3.0, y= 50.0),color="red", size=2.5) +
                  xlab("Longitude (°E)") + ylab("Latitude (°N)")

mpConvertFinal
